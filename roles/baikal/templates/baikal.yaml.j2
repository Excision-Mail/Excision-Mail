system:
    configured_version: {{ baikal_version }}
    timezone: {{ baikal_timezone }}
    card_enabled: true
    cal_enabled: true
    dav_auth_type: LDAP
    ldap_uri: '{{ baikal_ldap_uri }}'
    ldap_dn: '{{ baikal_ldap_dn }}'
    ldap_cn: '{{ baikal_ldap_cn }}'
    ldap_mail: '{{ baikal_ldap_mail }}'
    smtp_username: '{{ baikal_smtp_user }}'
    smtp_password: '{{ baikal_smtp_password }}'
    smtp_host: 'ssl://smtp.{{ item.name }}'
    smtp_port: '465'
    admin_passwordhash: {{ baikal_admin_hash }}
    failed_access_message: 'user %u authentication failure for Baikal'
    auth_realm: BaikalDAV
    base_uri: /
    invite_from: noreply@{{ item.name }}
database:
    sqlite_file: /baikal/Specific/db/db.sqlite
    mysql: true
    mysql_host: 127.0.0.1
    mysql_dbname: baikal_db{{ index }}
    mysql_username: baikal
    mysql_password: {{ baikal_db_password }}
    encryption_key: {{ baikal_enc_key }}
